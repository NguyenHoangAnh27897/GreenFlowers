@model IEnumerable<GreenFlowers.Models.GF_Record>
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int total = 0;
}

<div class="breadcrumb-area gray-bg">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li><a href="index.html">Home</a></li>
                <li class="active"> Checkout </li>
            </ul>
        </div>
    </div>
</div>
<!-- checkout-area start -->
<div class="checkout-area pb-45 pt-65">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="checkout-wrapper">
                    <div id="faq" class="panel-group">
                        <div class="panel panel-default">
                            <div class="panel-heading" id="headingOne">
                                <h5 class="panel-title"><span>1.</span> <a href="javascript:void(0);" data-toggle="collapse" data-target="#payment-1"  aria-expanded="true" aria-controls="payment-1">THÔNG TIN KHÁCH HÀNG</a></h5>
                            </div>
                            <div id="payment-1" class="collapse show"  aria-labelledby="headingOne" data-parent="#faq">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-10">
                                            <div class="checkout-register">
                                                <form action="/checkout/checkout" method="post">
                                                    <div class="login-form">
                                                        <label>Họ tên </label>
                                                        <input type="text" name="name">
                                                    </div>
                                                    <div class="login-form">
                                                        <label>Address</label>
                                                        <input type="text" name="address">
                                                    </div>
                                                    <div class="login-form">
                                                        <label>Phone</label>
                                                        <input type="text" name="phone">
                                                    </div>
                                                    <div class="login-form">
                                                        <label>Email</label>
                                                        <input type="text" name="email">
                                                    </div>
                                                    <button class="checkout-login-btn">Đặt hàng</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading"  id="headingTwo">
                                <h5 class="panel-title"><span>2.</span> <a href="javascript:void(0);" data-toggle="collapse" data-target="#payment-6"  aria-expanded="false" aria-controls="payment-6">THÔNG TIN GIỎ HÀNG</a></h5>
                            </div>
                            <div id="payment-6" class="collapse" aria-labelledby="headingTwo" data-parent="#faq">
                                <div class="panel-body">
                                    <div class="order-review-wrapper">
                                        <div class="order-review">
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th class="width-1">Product Name</th>
                                                            <th class="width-2">Price</th>
                                                            <th class="width-3">Quantity</th>
                                                            <th class="width-4">Total Price</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <div class="o-pro-dec">
                                                                        <p>@item.ProductName</p>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <div class="o-pro-price">
                                                                        <p>@item.Price</p>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <div class="o-pro-qty">
                                                                        <p>@item.Quantity</p>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <div class="o-pro-subtotal">
                                                                        <p>@item.TotalPrice</p>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                     
                                                        }  
                                                    </tbody>
                                                    <tfoot>
                                                        <tr>
                                                            <td colspan="3">Tổng tiền</td>
                                                            <td colspan="1">@total</td>
                                                        </tr>
                                                        @*<tr class="tr-f">
                                                            <td colspan="3">Shipping & Handling (Flat Rate - Fixed</td>
                                                            <td colspan="1">$45.00</td>
                                                        </tr>
                                                        <tr>
                                                            <td colspan="3">Grand Total</td>
                                                            <td colspan="1">$4,722.00</td>
                                                        </tr>*@
                                                    </tfoot>
                                                </table>
                                            </div>
                                            @*<div class="billing-back-btn">
                                                <span>
                                                    Forgot an Item?
                                                    <a href="#"> Edit Your Cart.</a>

                                                </span>
                                                <div class="billing-btn">
                                                    <button type="submit">Continue</button>
                                                </div>
                                            </div>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

