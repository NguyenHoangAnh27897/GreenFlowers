    <script type="text/javascript">
        var dataStorage = JSON.parse(localStorage.getItem('order'));

        $(document).ready(function () {
            if (dataStorage.length != 0) {
                $('span.count-style').text(dataStorage.length);
            } else {
                $('span.count-style').text(0);
            }
            const $ul = $('div.shopping-cart-content > ul');
            for (let i in dataStorage) {
                $ul.prepend(myLi(dataStorage[i], i));
            }

            $('.delete').on('click', (e) => {
                e.preventDefault();
                var $this = e.target.closest('li');
                dataStorage.splice($this.getAttribute('data-order'), 1);
                if (dataStorage.length != 0) {
                    $('span.count-style').text(dataStorage.length);
                } else {
                    $('span.count-style').text(0);
                }
                localStorage.setItem('order', JSON.stringify(dataStorage));
                $this.outerHTML = "";
            });
        });

        var myLi = (data, i) => {
            var $li = `<li class="single-shopping-cart" data-order="${i}">
                        <div class="shopping-cart-img">
                            <a href="#"><img alt="" src="/Images/product/avatar/${data.Avatar}" style="width: 100%;"></a>
                        </div>
                        <div class ="shopping-cart-title">
                            <i>${ data.date}</i>
                            <h4><a href="#">${data.ProductName} </a></h4>
                            <h6>Số lượng: ${data.Qty}</h6>
                            <span>Giá: ${data.Price} VNĐ</span>
                        </div>
                    </li>`;
            return $li;
        }
    </script>

