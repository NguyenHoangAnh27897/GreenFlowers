@model IEnumerable<GreenFlowers.Models.GF_Product>
@{
    ViewBag.Title = "ListProduct";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index" ">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Danh sách Sản phẩm</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start table basic -->
        <div class="basic-table">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-table">
                        <div class="section-head">
                            <div class="title">
                                <h4>Danh sách Sản phẩm</h4>
                            </div>
                        </div>
                        <div class="section-body">
                            <div class="table-responsive">
                                <table class="table table-hover progress-table text-white text-center" border="0" style="border-width:0px;border-style:None;border-collapse:collapse;">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Tên sản phẩm</th>
                                            <th>Giá</th>
                                            <th>Giảm giá</th>
                                            <th>Miêu tả</th>
                                            <th>Avatar</th>
                                            <th>Hình ảnh</th>
                                            @*<th>Hide</th>*@
                                            <th>Xoá</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>@item.ID</td>
                                            <td><a href="/webmaster/editproduct/@item.ID">@item.ProductName</a></td>
                                            <td>@item.Price</td>
                                            <td>@item.DiscountPrice</td>
                                            @if (item.Description != null)
                                            {
                                                if (item.Description.Count() > 25)
                                                {
                                                    <td>@item.Description.Substring(0, 25)</td>
                                                }
                                                else
                                                {
                                                    <td></td>
                                                }
                                            }
                                            else
                                            {
                                                <td></td>
                                            }
                                            <td>@item.Avatar</td>
                                            <td>@item.Images</td>
                                            @*<td><input type="checkbox" /></td>*@
                                            <td><a href="/webmaster/deleteproduct/@item.ID"><img src="~/Images/icon/if_f-cross_256_282471.png" /></a></td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

