@model IQueryable<GreenFlowers.Models.GF_Sale>
@{
    ViewBag.Title = "EditSale";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Quản lý Sản phẩm</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start form -->
        <div class="form-area">
            <div class="row">

                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Chỉnh sửa Đợt giảm giá</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/webmaster/editsale" method="post">

                                <input style="display:none;" name="ID" value="@Model.FirstOrDefault().ID"/>
                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tên đợt giảm giá</label>
                                    <input type="text" class="form-control" placeholder="" name="name" value="@Model.FirstOrDefault().SaleName">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Giá giảm (%)</label>
                                    <input style="width:20%" type="number" class="form-control" placeholder="" name="discountprice" step="any" value="@Model.FirstOrDefault().DiscountPercent">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Ngày kết thúc</label>
                                    <input style="width:20%" type="date" class="form-control" placeholder="" name="ToDate" value="@Model.FirstOrDefault().ToDate.Value"/>
                                </div>

                                <button class="btn btn-primaryt">Lưu</button>
                            </form>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

