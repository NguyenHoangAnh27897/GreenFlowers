@model IEnumerable<GreenFlowers.Models.GF_Record>
@{
    ViewBag.Title = "CheckOrder";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Quản lý Đơn hàng</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start form -->
        <div class="form-area">
            <div class="row">

                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Kiểm tra đơn hàng</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/webmaster/confirmorder" method="post" enctype="multipart/form-data">

                                <div class="table-responsive">
                                    <table class="table table-hover progress-table text-white text-center" border="0" style="border-width:0px;border-style:None;border-collapse:collapse;">
                                        <thead>
                                            <tr>
                                                <th style="display:none">ID</th>
                                                <th>Tên sản phẩm</th>
                                                <th>Số lượng</th>
                                                <th>Giá</th>
                                                <th>Tổng giá</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td style="display:none">@item.ID_Order<input type="text" value="@item.ID_Order" name="orderid" style="display:none" /></td>
                                                    <td>@item.ProductName</td>
                                                    <td>@item.Quantity</td>
                                                    <td>@item.Price</td>
                                                    <td>@item.TotalPrice</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <button class="btn btn-primaryt">Duyệt đơn hàng</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

