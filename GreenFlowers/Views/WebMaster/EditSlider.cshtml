@model IQueryable<GreenFlowers.Models.GF_Slider>
@{
    ViewBag.Title = "EditSlider";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
    string[] arrStr;
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa Slider</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start form -->
        <div class="form-area">
            <div class="row">

                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Thay đổi Slider</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/webmaster/editslider" method="post" enctype="multipart/form-data">

                                @if (Model.FirstOrDefault().Slider.Contains(","))
                                {
                                    arrStr = Model.FirstOrDefault().Slider.Split(',');
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Hình ảnh</label>
                                        <br />
                                        <input type="file" name="images" accept="image/*" multiple="multiple" />
                                        <div class="row">
                                            @foreach (var img in arrStr)
                                            {

                                                <div class="col-sm-3 bg-slider" style="background: url('../../Images/slider/@img') center center no-repeat / cover;">
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Hình ảnh</label>
                                        <br />
                                        <input type="file" name="images" accept="image/*" multiple="multiple" />
                                        <img src="~/Images/photos/@Model.FirstOrDefault().Slider" style="width:100%" />
                                    </div>
                                }

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tiêu đề thứ nhất</label>
                                    <input type="text" class="form-control" placeholder="" name="heading3" value="@Model.FirstOrDefault().Heading3">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tiêu đề thứ hai</label>
                                    <input type="text" class="form-control" placeholder="" name="heading1" value="@Model.FirstOrDefault().Heading1">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tiêu đề thứ ba</label>
                                    <input type="text" class="form-control" placeholder="" name="heading5" value="@Model.FirstOrDefault().Heading5">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tên nút nhấn</label>
                                    <input type="text" class="form-control" placeholder="" name="button" value="@Model.FirstOrDefault().Button">
                                </div>

                                <button class="btn btn-primaryt">Submit</button>
                            </form>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
<script src="~/Content/Webmaster/js/ckeditor/ckeditor.js"></script>
<script src="~/Content/Webmaster/js/ckeditor/samples/js/sample.js"></script>
<script>
    CKEDITOR.replace('editor');
</script>



