
@{
    ViewBag.Title = "EditSlider";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa Slider</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start form -->
        <div class="form-area">
            <div class="row">

                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Thay đổi Slider</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/webmaster/editblog" method="post" enctype="multipart/form-data">

                                <input type="text" class="form-control" placeholder="" name="id" value="@Model.FirstOrDefault().ID" style="display:none">
       
                                <div class="form-group">
                                    <label for="exampleFormControlFile1">Avatar</label>
                                    <br />
                                    <input type="file" name="avatar" accept="image/*" />
                                    <img src="~/Images/product/avatar/@Model.FirstOrDefault().Avatar" style="width:100%" />
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlSelect1">Content</label>
                                    <br />
                                    <textarea name="editor" id="editor" rows="50" cols="80">@Model.FirstOrDefault().ContentBlog</textarea>
                                </div>

                                <div class="form-group">
                                    <label class="form-check-label"><input type="checkbox" name="hide" value="true" />Hide</label>
                                </div>

                                <button class="btn btn-primaryt">Submit</button>
                            </form>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
<script src="~/Content/Webmaster/js/ckeditor/ckeditor.js"></script>
<script src="~/Content/Webmaster/js/ckeditor/samples/js/sample.js"></script>
<script>
    CKEDITOR.replace('editor');
</script>



