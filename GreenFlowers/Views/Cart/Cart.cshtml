
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-area gray-bg">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li><a href="index.html">Home</a></li>
                <li class="active">Wishlist </li>
            </ul>
        </div>
    </div>
</div>
<!-- shopping-cart-area start -->
<div class="cart-main-area pt-70 pb-75">
    <div class="container">
        <h3 class="page-title">Your cart items</h3>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <form action="#">
                    <div class="table-content table-responsive wishlist">
                        <table>
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total Price</th>
                                </tr>
                            </thead>
                            <tbody class="tbody-cart"></tbody>
                        </table>
                    </div>
                </form>
                <div class="shopping-cart-btn btn-success col-sm-4">
                    <a href="@Url.Action("Checkout", "CheckOut")"> Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        const $tbody = $('tbody.tbody-cart');
        var dataOrder = JSON.parse(localStorage.getItem('order'));
        for (let i in dataStorage) {
            $tbody.append(myTr(dataStorage[i], i));
        }
    });

    var myTr = (data, i) => {
        var $tr = `<tr>
                    <td class="product-thumbnail">
                        <a href="#"><img src="/Images/product/avatar/${data.Avatar}" alt="${i}"></a>
                    </td>
                    <td class ="product-name"><a href="#">${data.ProductName}</a></td>
                    <td class ="product-price-cart"><span class ="amount">${data.Price}</span></td>
                    <td class="product-quantity">
                        <div class="pro-dec-cart">
                            <input class ="cart-plus-minus-box" type="text" value="${data.Qty}" name="qtybutton" readonly disable>
                        </div>
                    </td>
                    <td class ="product-subtotal">${data.Qty * data.Price}</td>
                </tr>`;
        return $tr;
    }
</script>