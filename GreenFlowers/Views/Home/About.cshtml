@model IQueryable<GreenFlowers.Models.GF_Introduce>
@{
    ViewBag.Title = "About";
}
<div class="breadcrumb-area gray-bg">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li>@Html.ActionLink("Trang Chủ", "Index", "Home")</li>
                <li class="active">About us </li>
            </ul>
        </div>
    </div>
</div>
<div class="about-us-area pt-80 pb-80">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-8 d-flex align-items-center">
                <div class="overview-content-2">
                    <h2>Chào mừng đến với <span>Hoa tươi xanh</span> !</h2>
                   @Html.Raw(Model.FirstOrDefault().ContentIntroduce)
                    <div class="overview-btn mt-45">
                        <a class="btn-style-2" href="@Url.Action("Shop", "Home")">Shop now!</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-md-4">
                <div class="overview-img text-center">
                    <a href="#">
                        <img src="~/Images/introduce/@Model.FirstOrDefault().Avatar" alt="">
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
