            </div>
        </div>
        <div class="best-selling-wrap">
            <div class="best-selling-active owl-carousel product-nav">
                @foreach (var item in lst)
                {
                    if (item.Price == null)
                    {
                        <div class="single-best-selling">
                            <div class="row">
                                <div class="col-lg-6 col-xl-5 col-md-6">
                                    <div class="single-best-img">
